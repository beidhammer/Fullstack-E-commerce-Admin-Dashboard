<%- include('partials/header', { user, token }) %>
<h1>Order Management</h1>
<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Order Number</th>
      <th>Created</th>
      <th>Updated</th>
      <th>User ID</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td><%= o.id %></td>
        <td><%= o.ordernumber %></td>
        <td><%= new Date(o.createdAt).toLocaleDateString() %></td>
        <td><%= new Date(o.updatedAt).toLocaleDateString() %></td>
        <td><%= o.user_id %></td>
        <td><%= o.status %></td>
      </tr>
    <% }) %>
  </tbody>
</table>